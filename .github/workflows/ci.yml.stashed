name: CI

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build-and-test:
    name: Build and Test
    runs-on: macos-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v4

    - name: Set up Xcode
      uses: maxim-lobanov/setup-xcode@v1
      with:
        xcode-version: '26.2'

    - name: Build
      run: |
        xcodebuild -scheme LexiconFlow \
          -sdk iphonesimulator \
          -destination 'platform=iOS Simulator,name=iPhone 16 Pro Max' \
          clean build

    - name: Run Unit Tests
      run: |
        xcodebuild test \
          -scheme LexiconFlow \
          -sdk iphonesimulator \
          -destination 'platform=iOS Simulator,name=iPhone 16 Pro Max' \
          -enableCodeCoverage YES

    - name: Code Coverage
      run: |
        xcrun llvm-cov report \
          --instr-profile=*.profdata \
          --format=xml \
          --output=coverage.xml

    - name: Upload Coverage
      uses: codecov/codecov-action@v4
      with:
        file: ./coverage.xml

  swiftlint:
    name: SwiftLint
    runs-on: macos-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v4

    - name: Install SwiftLint
      run: brew install swiftlint

    - name: Run SwiftLint
      run: swiftlint lint --strict

  swift-format:
    name: Swift Format
    runs-on: macos-latest

    steps:
    - name: Checkout
      uses: actions/checkout@v4

    - name: Install SwiftFormat
      run: brew install swiftformat

    - name: Run SwiftFormat
      run: swiftformat --lint .
